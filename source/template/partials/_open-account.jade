section.feedback.open-account-content.wow.fadeInUp
	.container
		.row.hidden-xs.hidden-sm
			.col-sm-19.col-sm-offset-1.col-md-14.col-md-offset-3.text-center
				.steps
					span.step.step-1
						span.icon.icon-1
						|Оставьте ваши
						br
						|контактные данные
					span.step.step-2
						span.icon.icon-2
						|Дождитесь звонка,
						br
						|и получите консультацию
						br
						|финансового советника
					span.step.step-3
						span.icon.icon-3
						|Присоединяйтесь 
						br
						|к компании БКС
					
		.row
			.col-sm-12.col-sm-offset-4.col-md-6.col-md-offset-4
				form.feedback-form
					.form-group.clearfix
						label(for="account-type") Ваш город
						select.custom-select(id="account-type" name="account-type")
							option(selected="selected" value="0") Паевые фонды
							option(value="108") Доверительное управление
							option(value="134") Индивидуальный инвестиционный счёт
					.form-group.clearfix
						label(for="city2") Ваш город
						select.custom-select(id="city2" name="city")
							option(selected="selected" value="0") Ваш город
							option(value="108") Москва
							option(value="134") Новосибирск
							option(value="46") Абакан
							option(value="36") Алматы
							option(value="113") Альметьевск
							option(value="115") Анапа
							option(value="119") Армавир
							option(value="71") Архангельск
							option(value="105") Астрахань
							option(value="175") Ачинск
							option(value="79") Барнаул
							option(value="139") Белгород
							option(value="35") Биробиджан
					.form-group.clearfix
						label(for="name") Ваше имя
						input(class="name" type="text" id="name" name="name" placeholder="Ваше имя")
					.form-group.clearfix
						label(for="mobile") Ваш телефон
						input(class="error" type="text" id="mobile" name="phone" placeholder="Ваш телефон")
					.form-group.clearfix
						label(for="email") Ваша Электронная почта
						input(type="text" id="email" name="email" placeholder="Ваша Электронная почта")
					.form-group.agreement.clearfix
						label(for="agreement")
							span.custom-checkbox
								input(type="checkbox" name="agreement" id="agreement")
							|Я согласен на передачу и обработку своих 
							a(href="#") персональных данных
					.form-group.label-offset.clearfix.actions
						.advice
							input.btn.btn-yellow(type="submit", value="Получить консультацию")
			.col-sm-20.col-md-5.col-md-offset-3
				.advantages
					ul.advantages-list.row
						li.col-xs-10.col-sm-10.col-md-20
							span.icon.icon-1
							em 15 лет 
							| управляем активами ПИФов с 2000 года
						li.col-xs-10.col-sm-10.col-md-20
							span.icon.icon-2
							em 11 000 
							| клиентов уже инвестируют с нами
							br
							br
						li.col-xs-10.col-sm-10.col-md-20
							span.icon.icon-3
							em АА- 
							| входит в группу «очень высокая надежность»
						li.col-xs-10.col-sm-10.col-md-20
							span.icon.icon-4
							em 9.3 млрд. руб. 
							| общая стоимость активов в управлении
						li.col-xs-10.col-xs-offset-5.col-sm-10.col-sm-offset-5.col-md-20.col-md-offset-0
							span.icon.icon-5
							em 50 офисов 
							| широкая сеть по всей России

